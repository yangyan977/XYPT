/* pages/home/home.wxss */
.nav{

  height: 100rpx;
  width: 750rpx;
  position: fixed;
  z-index: 1;
  background-color: white;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.nav view{
  position: relative;
  width: 170rpx;
  height: 100rpx;
  line-height: 120rpx;
  display: flex;
  color: rgb(197, 196, 196);
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
  border-bottom: 5rpx solid rgb(197, 197, 197)
}
.nav .active{
  position: relative;
  width: 170rpx;
  height: 100rpx;
  line-height: 120rpx;
  display: flex;
  color: rgb(94, 197, 223);
  align-items: center;
  font-size: 34rpx;
  justify-content: center;
  border-bottom: 6rpx solid rgb(94, 197, 223);

}


.canteenorder{
  margin-left: 25rpx;

  margin-top: 120rpx;

  width: 700rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx lightgray;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.canteenorder .header{
  background-image: linear-gradient(80deg,#cff09e , white);
}
.canteenorder .type{
  width: 120rpx;
}

.borroworder{
  margin-left: 25rpx;

  margin-top: 120rpx;

  width: 700rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx lightgray;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.borroworder .header{
  background-image: linear-gradient(80deg, #fdcdc1 0%, white );
}
.borroworder .type{
  width: 120rpx;
}

.helporder{
  margin-left: 25rpx;

  margin-top: 120rpx;

  width: 700rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx lightgray;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.helporder .header{
  background-image: linear-gradient(225deg, #FFFEFF 0%, #D7FFFE 100%);
}
.helporder .address{
  height: 120rpx;
}
.helporder .address .tag{
  width: 75rpx;
  height: 75rpx;
  color: white;
  font-size: small;
  text-indent: 11rpx;
  line-height: 75rpx;
}

.expressorder{

  margin-top: 120rpx;

  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx lightgray;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.header{
  display: flex;
  width: 700rpx;
  height: 120rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  align-items: center;
  background-image: linear-gradient(60deg, #96f5d5 0%, white);
}
.profilepic{
   width:85rpx;
   height: 85rpx;
   border-radius: 50%;
   margin-left: 35rpx;
   border: 1rpx solid lightgray;
}
.header text:last-child{
  width: 110rpx;
  height: 60rpx;
  color: white;
  line-height: 60rpx;
  text-align:center;
  font-size: small;
  margin-left: 20rpx;
  border-radius: 10rpx;
  background-color:#65abf1;
}
.userNickname{
  margin-left: 20rpx;
  width: 400rpx;
  font-size: large;
  font-weight: 600;
}
.timeType{
  display: flex;
  justify-content: space-between;
  width: 650rpx;
  height: 75rpx;
  align-items: center;
  margin:10rpx 25rpx;
  border-bottom: 1rpx solid lightgray;
}
.publishTime{
  font-size: small;
  color: gray;
  font-weight: 600;
}
.type{
  width: 100rpx;
  height: 50rpx;
  color: white;
  line-height: 50rpx;
  text-align:center;
  font-size: small;
  border-radius: 10rpx;
  background-color:#6a84f8;
}
.numVol{
  display: flex;
  justify-content: space-between;
  width: 650rpx;
  height: 75rpx;
  align-items: center;
  border-bottom: 1rpx solid lightgray;
  margin-left: 25rpx;
  font-size: small;
  font-weight: 600;
}
.vol{
  margin-right: 20rpx;
  width: 325rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: end;
  border-left: 1rpx solid lightgray;
}
.num{
  width: 325rpx;
}
.address{
  display: flex;
  width: 650rpx;
  flex-direction: column;
  height: 200rpx;
  margin-left: 25rpx;
  justify-content: space-around;
  border-bottom: 1rpx solid lightgray;
}
.address view{
  display: flex;
}
.address .tag{
  width: 75rpx;
  height: 75rpx;
  text-indent: 23rpx;
  color: white;
  border-radius: 50%;
  line-height: 75rpx;
}
.address text{
  margin: 10rpx 35rpx;
  font-size: medium;
}
.startpoint .tag{
   background-color: rgb(255, 126, 103);
}
.finishpoint .tag{
  background-color: rgb(85, 230, 128);
}

.costs{
  width: 650rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  margin-left: 25rpx;
  justify-content: space-between;
}
.costs .icon{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #ff8181;
  color: white;
  font-size: small;
}
.detail{
   font-size: small;
   width: 80rpx;
   text-align: center;
   height: 50rpx;
   line-height: 50rpx;
   background-color: rgb(74, 206, 114);
   color: white;
   border-radius: 10rpx;
}
