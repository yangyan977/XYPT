/* pages/mine/mine.wxss */

.top .main{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 700rpx;
  margin: 25rpx;
  /* background: linear-gradient(to top,rgba(255, 255, 255),rgb(179, 225, 253)); */
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  height: 250rpx;
  box-shadow:2rpx 2rpx 5rpx lightgray;
}

.top .main .pic image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-top: 5rpx;
}

.top .main .pic{
  margin-left: 20rpx;
  border-radius: 50%;
  height: 160rpx;
  width: 160rpx;
  text-align: center;
  background-color: white;
  box-shadow: 5rpx 5rpx 8rpx lightgray;
}

.main .describe{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  height: 150rpx;
  justify-content:flex-start;
  align-items: left;
}

.main .describe .LoginRemind{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:small;
  font-weight: 600;
  color:white;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  background-color:rgb(93, 184, 173) ;
}

.main .describe .name{
  font-size: larger;
  width: 200rpx;
  height: 60rpx;
  font-weight: 600;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.main .describe .basic{
  font-size: smaller;
  color: #dadada;
  font-weight: 500;
  margin-top: 40rpx;
  margin-left: 30rpx;
}

.main text{
  margin-right: 10rpx;
  margin-left: 220rpx;
  font-size: large;
  font-weight: 500;
  color: #dadada;
} 
.gif-wave{
    position: absolute;
    z-index: -1;
		width: 100%;
    height: 1500rpx;
    mix-blend-mode: soft-light;
}
.setting{
  width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
  position: relative;
   z-index: 1;
   margin-left: 25rpx;
   background-color: white;
   border-radius: 10rpx;
   box-shadow:5rpx 5rpx 8rpx lightgray;
}

.setting .fun{
  display: flex;
  background-color: white;
  width: 600rpx;
  height: 100rpx;
  border-bottom: 1rpx lightgray solid;
  align-items: center;
  margin-bottom: 20rpx;
}
.setting .fun image{
  width: 50rpx;
  height: 50rpx;
}
.setting .fun .text{
  margin-left: 40rpx;
  font-size: 25rpx;
  font-weight: 500;
}

