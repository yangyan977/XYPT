
.nav {
  position: fixed;
  background: white;
  color: #353535;
  z-index: 999999;
  max-height: 94rpx;
  width: 100%;
}
.flex {
  display: flex;
  text-align: center;
}
.nav .nav-item.current {
  color: #2196F3;
  font-size: 30rpx;
  border-bottom: 4rpx solid #2196F3;
  font-weight: 500;
}
.nav .nav-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
  font-size: small;
  color: lightgrey;
  font-weight: 500;
}
.order-wait{
  position: absolute;
  margin-top: 90rpx;
}
.order{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 300rpx;
  width: 700rpx;
  margin: 40rpx 25rpx 0rpx 25rpx;
  background-color: #ceffff;
  border-radius: 2%;
  box-shadow: 5rpx 5rpx 8rpx lightgrey;
}
.order image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 35rpx;
  margin-top: 20rpx;
}
.order .pic{
  width: 150rpx;
  height: 300rpx;
  align-items: center;
}
.body{
  display: flex;
  flex-direction: column;
  height: 300rpx;
  width: 550rpx;
  justify-content: flex-start;
}
.describ-top{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ordertype{
  display: flex;
  flex-direction: column;
}
.ordertype .num1{
  font-weight: 600;
} 
.order .num2{
  font-size: small;
  color: lightslategray;
  font-weight: 500;
}
.condition{
  width: 130rpx;
  height: 60rpx;
  text-align: center;
  line-height:60rpx ;
  font-weight: 500;
  color: white;
  font-size: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: #65abf1;
}
.describ-medium text{
  font-size: small;
  font-weight: 500;
}
.describ-bottom{
  width: 100rpx;
  height: 60rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 60rpx;
  color: #ffffff;
  margin-top: 50rpx;
  margin-left: 425rpx;
  background-color: #fa8c8c;
  border-radius: 10%;
}
.order-accept{
  margin-top: 90rpx;
}
.order-accept-body .runner{
  border-radius: 10rpx;
  margin-top: 5rpx;
  display: flex;
  width: 700rpx;
  height: 100rpx;
  margin-left: 25rpx;
  background-color:#e6ffdc;
  box-shadow: 1rpx 1rpx 5rpx rgb(162, 163, 165);
  align-items: center;
}
.order-accept-body .runner image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-left: 25rpx;
}
.order-accept .condition{
  background-color:#66CCCC;
  color: white;
}
.order-accept-body .runner .num1{
   margin-left: 20rpx;
   width: 300rpx;
   font-size: smaller;
   font-weight: 500;
   color: #6699CC;
   font-weight: 600;
}
.order-accept-body .runner .num2{
  margin-left: 200rpx;
  width: 90rpx;
  font-size: 23rpx;
  font-weight: 500;
  color:#fdcb00;
}
.order-finish .condition{
   /* background-color: #336699; */
   background-color: #8ad83c;
   color: white;
}